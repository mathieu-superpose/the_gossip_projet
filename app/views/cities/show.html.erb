

<!-- List gossip -->
<div class="row justify-content-center">
    <div class="col-2">
      <img class= "rounded-circle img-fluid border-secondary" alt="city pic" src="<%= asset_path("city/" + @city.id.to_s + ".jpg") %>" style="height:120px;width:120px">
    </div>
    <div class="col-7">
      <h3 class="mt-4 mb-4">Les potins de<br><%= @city.name %>:</h3>
    </div>
</div>

<% @city.users.each do |user|%>
<% user.gossips.each do |gossip|%>
<div class="row my-3">
  <div class="col-md-12">
    <div class="card p-2">
      <div class="card-body d-flex m-0 p-0">

        <div class="col-md-1 pt-2">
          <div class="ml-auto d-flex">
            Id: <%=gossip.id%>
          </div>
        </div>

        <div class="col-md-11">
            <div class="card-text">
            <%= link_to "Auteur: " + user.first_name + user.last_name , profile_path(:id => user.id)%>
            </div>
            <div class="card-text">
              <a href="/gossips/<%=gossip.id%>/">
                 <span><strong>Titre:</strong></span><span class="text-muted"> <%= gossip.title %></span>
              </a>
            </div>
          <div class="card-body m-0 px-0  pt-2 pb-0 ">
             <span><strong>Potin:</strong></span><span class="text-muted"> <%= gossip.content %></span>
          </div>
          
          <% if gossip.user != current_user %>
          <div class="card-body m-0 px-0  pt-2 pb-0">
          <div class="pl-3" onmouseover="this.style.opacity = '0.5'" onmouseout="this.style.opacity = '1'">
                                            <%= link_to gossip_likes_path(gossip), method: :post do %>
                                            <%= image_tag "thumb.png", width: 37, height: 37
%>
                                            <% end %>
                                        </div>
          </div>
          <%end%>
          
        </div>

      </div>

    </div>
  </div>
</div>
<%end%>
<%end%>

